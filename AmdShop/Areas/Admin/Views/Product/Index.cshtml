@model List<Product>


<div class="card shadow border-0 my-4" >
    <div class="card-header bg-primary  ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h4 class="text-white py-2">Product List</h4>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div> 
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary hover ">
                    <i class="bi bi-plus-circle"></i>  Create Product  
                </a>
            </div> 
        </div> 

        <table id="tblData" class="table table-bordered table-striped">    
            <thead>
                <tr >
                    <th class="bg-primary text-white bg-gradient"> Title </th>        
                    <th class="bg-primary text-white bg-gradient"> ISBN </th>
                    <th class="bg-primary text-white bg-gradient"> Author </th>
                    <th class="bg-primary text-white bg-gradient"> ListPrice </th>
                    <th class="bg-primary text-white bg-gradient"> CategoryName </th>
                    <th class="bg-primary text-white bg-gradient"></th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
